{
    "name": "Covid-O-Meter",
    "version": "1.0.0",
    "scripts": {
        "client": "cd client && npm start",
        "server": "cd server && nodemon server.js",
        "runApp": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "express": "^4.16.4"
    },
    "devDependencies": {
        "concurrently": "^4.0.1"
    }
}